
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/css")
    <style>

        
    </style>
</head>
<body class="bg-gradient-info">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-12 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-lg-5">
                    <div class="card-body p-2">
                        <div class="row">
                            <div class="col-6">
                                <img src="@Url.Content("~/Imagenes/Libro.png")" style="width: 550px;height: 500px;" />
                            </div>
                            <div class="col-6">
                                <div class="p-xl-5">
                                    <div class="text-center">
                                        <h1 class="h1 text-dark mb-4 font-weight-bolder">BIENVENIDO</h1>
                                    </div>
                                    <form class="user" action="@Url.Action("Index","Login")" method="post">
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user font-weight-light text-center" name="correo" placeholder="correo electronico" value="">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user font-weight-light text-center" name="clave" placeholder="contraseña" value="">
                                        </div>
                                        <div class="form-group">
                                            @{if (ViewBag.Error != null)
                                                {
                                    <div class="alert alert-danger" role="alert">
                                        @ViewBag.Error
                                    </div> } }
                                        </div>
                                        <button class="btn btn-info btn-outline-dark btn-block btn-user font-weight-bolder" type="submit">INICIAR SESION</button>

                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <h1 class="h6 text-info mb-4 font-weight-bolder">Si aun no posee en cuenta, pongase en contacto con el administrado del negocio</h1>
                                        <h1 class="h6 text-info mb-4 font-weight-bolder">admin@lgetsmani.com</h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
